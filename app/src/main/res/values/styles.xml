<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Base.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_new</item>
        <item name="colorPrimaryDark">@color/dark_new</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <style name="Theme.Main" parent="Base.Theme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--sign in text style -->
    <!--here the intro activity style -->
    <style name="changefont" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="android:fontFamily">Montserrat-Regular.otf</item>
    </style>
</resources>
